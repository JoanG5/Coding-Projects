    while cont == 'y':
        if keep =='n':
            n1 = float(input('Select your number: '))
        op = input('Select your operator (+, -, *, /): ')
        n2 = float(input('Select your number: '))
        equal = 0

        if op == '+':
            equal = n1 + n2
            print(equal)
            continueprompt()
        elif op == '-':
            equal = n1 - n2
            print(equal)
            continueprompt()
        elif op == '*':
            equal = n1 * n2
            print(equal)
            continueprompt()
        elif op == '/':
            equal = n1 / n2
            print(equal)
            continueprompt()


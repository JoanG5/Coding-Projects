def Calculator():
    print('Welcome to The Calculator.')
    cont = 'y'
    keep = 'n'
    def continueprompt():
        cont = input('Would you like to continue? \n(y for yes, n for no): ')
        keep = input('would you like to keep the value? \n(y for yes, n for no): ')
